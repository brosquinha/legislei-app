<Page class="Page" loaded="onPageLoaded">
    <ActionBar title="Minhas inscrições" class="action-bar"></ActionBar>

    <GridLayout rows="*, auto">
        <FlexboxLayout>
            <ListView items="{{ subscriptions.parlamentares }}" height="200">
                <ListView.itemTemplate>
                    <GridLayout columns="2*, *" margin="3">
                        <StackLayout col="0">
                            <Label class="h2" text="{{ nome + ' (' + partido +')' }}" />
                            <Button class="btn btn-primary btn-active" text="Minhas avaliações" />
                            <Button
                                class="btn btn-outline btn-active"
                                text="Últimos relatórios"
                                data-id="{{ id }}"
                                data-house="{{ casa }}"
                                onTap="onCheckAssemblymanReports" />
                            <Button class="btn btn-outline btn-active" text="Deletar inscrição" />
                        </StackLayout>
                        <Image col="1" src="{{ foto }}" height="200" stretch="aspectFit" />
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
        </FlexboxLayout>
        <StackLayout horizontalAlignment="right" row="1">
            <Button class="btn btn-primary btn-rounded-lg btn-active" text="+" />
        </StackLayout>
    </GridLayout>
</Page>