<Page class="Page" loaded="loadRatings">
    <ActionBar title="{{ title }}" class="action-bar">
        <NavigationButton text="Back" android.systemIcon="ic_menu_back"  tap="goBackTo"/>
    </ActionBar>

    <StackLayout>
        <FlexboxLayout flexWrap="wrap" justifyContent="center">
            <StackLayout alignSelf="center" class="m-r-30 text-center"><!-- style="background-color: #f8f9fa"-->
                <Label class="h1" text="{{ nome + ' (' + partido + '-' + uf + ')' }}" textWrap="true" />
                <Image src="{{ foto }}" height="200" stretch="aspectFit" loadMode="async" />
                <Label class="h2 text-capitalize" text="{{ formatHouse(casa) }}" textWrap="true" />
            </StackLayout>
            <StackLayout alignSelf="center">
                <Label class="h1" text="{{ 'Pontuação: ' + overallScore }}" textWrap="true" />
                <Label
                    class="h2 m-5"
                    text="{{ generalFeeling }}"
                    textWrap="true" />
                <Label
                    class="h3 m-5"
                    visibility="{{ (loveCount) ? 'visible' : 'collapsed' }}"
                    text="{{ loveCount + ' atividades que adorei ❤️' }}"
                    textWrap="true" />
                <Label
                    class="h3 m-5"
                    visibility="{{ (likeCount) ? 'visible' : 'collapsed' }}"
                    text="{{ likeCount + ' atividades que curti 👍' }}"
                    textWrap="true" />
                <Label
                    class="h3 m-5"
                    visibility="{{ (dislikeCount) ? 'visible' : 'collapsed' }}"
                    text="{{ dislikeCount + ' atividades que não curti 👎' }}"
                    textWrap="true" />
                <Label
                    class="h3 m-5"
                    visibility="{{ (hateCount) ? 'visible' : 'collapsed' }}"
                    text="{{ hateCount + ' atividades que detestei 💀' }}"
                    textWrap="true" />
            </StackLayout>
        </FlexboxLayout>
        <Button class="btn btn-primary btn-active" text="Ver atividades avaliadas" onTap="goToAssemblymanRatings" />
    </StackLayout>
</Page>